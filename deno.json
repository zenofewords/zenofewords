{
  "tasks": {
    "build": "deno bundle --platform browser --output static/js/main.js static/ts/main.ts",
    "build:watch": "deno bundle --platform browser --output static/js/main.js --watch static/ts/main.ts",
    "build:css": "deno run --allow-read --allow-write --allow-env --allow-run npm:esbuild static/css/styles.css --minify --outfile=static/css/styles.min.css",
    "build:prod": "deno task build:css && deno bundle --platform browser --minify --output static/js/main.js static/ts/main.ts",
    "test": "deno test static/ts/"
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["ES2020", "dom", "deno.ns"]
  }
}
